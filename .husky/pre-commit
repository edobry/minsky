# Pre-commit validation hook
#
# This replaces the complex bash logic with a clean implementation
# that leverages Minsky's own infrastructure for configuration and error handling.

echo "🚀 Running pre-commit validation..."

# Execute the pre-commit validation
if ! bun run src/hooks/pre-commit.ts; then
  echo ""
  echo "❌ ❌ ❌ PRE-COMMIT VALIDATION FAILED! ❌ ❌ ❌"
  echo ""
  echo "🚫 One or more validation steps failed. Please review the output above."
  echo "💡 The validation system provides detailed error messages and debugging."
  echo ""
  exit 1
fi

echo ""
echo "✅ ✅ ✅ ALL VALIDATIONS PASSED! ✅ ✅ ✅"
echo ""
echo "🎉 Pre-commit validation completed successfully!"
echo "📦 Your changes are ready to be committed."
