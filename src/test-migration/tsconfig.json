{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "noImplicitAny": false
  },
  "include": ["**/*.ts", "types.d.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
