{
  "name": "minsky",
  "module": "src/cli.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/cli.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:tests": "bun detect-placeholder-tests.ts",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "format:all": "bun run format && bun run lint:fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "validate-commit": "bun scripts/validate-commit-message.ts",
    "secrets:scan": "npx secretlint \"**/*\" --no-color",
    "secrets:gitleaks": "gitleaks detect --source . --verbose"
  },
  "bin": {
    "minsky": "./src/cli.ts"
  },
  "devDependencies": {
    "@eslint/js": "9.29.0",
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@secretlint/secretlint-rule-aws": "^10.2.1",
    "@secretlint/secretlint-rule-basicauth": "^10.2.1",
    "@secretlint/secretlint-rule-gcp": "^10.2.1",
    "@secretlint/secretlint-rule-github": "^10.2.1",
    "@secretlint/secretlint-rule-npm": "^10.2.1",
    "@secretlint/secretlint-rule-openai": "^10.2.1",
    "@secretlint/secretlint-rule-preset-recommend": "^10.2.1",
    "@secretlint/secretlint-rule-privatekey": "^10.2.1",
    "@secretlint/secretlint-rule-slack": "^10.2.1",
    "@types/bun": "^1.2.11",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.17",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@valibot/to-json-schema": "^1.3.0",
    "bun-types": "latest",
    "effect": "^3.16.12",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.3",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "secretlint": "^10.2.1",
    "ts-morph": "^26.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.2",
    "@ai-sdk/google": "^1.0.2",
    "@ai-sdk/openai": "^1.0.2",
    "@clack/prompts": "^0.11.0",
    "@dotenvx/dotenvx": "^1.45.2",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "@octokit/rest": "^22.0.0",
    "@types/logform": "^1.10.1",
    "@types/winston": "^2.4.4",
    "ai": "^4.1.5",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "fs-extra": "^11.3.0",
    "gray-matter": "^4.0.3",
    "logform": "^2.7.0",
    "pg": "^8.16.2",
    "winston": "^3.17.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.8",
    "zod-to-json-schema": "^3.23.5"
  }
